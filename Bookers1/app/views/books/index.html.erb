<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
         <th><td><%=link_to "Show", book_path(book) %></td></th> 
        <th><td><%=link_to "Edit", edit_book_path(book) %></td></th> 
        <th><td><%=link_to "Destroy", book_path(book),method: :delete %></td></th>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model:@book, local: true do |f|%>
 <h3>New book</h3>
 <div id="error_explanation">
  <% if @book.errors.any? %>
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Body</h4>
  <%= f.text_area :body %>
 <div>
    <%= f.submit "Create Book" %>
 </div>
<% end %>
